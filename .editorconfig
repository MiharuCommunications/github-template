root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.{js,ts}]
indent_size = 4

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{less,css,scala,html,jade,scss,yml,json,tsx,conf}]
indent_size = 2


[*.{conf,bat}]
end_of_line = crlf


[*.mib]
end_of_line = crlf
charset = Shift_JIS
